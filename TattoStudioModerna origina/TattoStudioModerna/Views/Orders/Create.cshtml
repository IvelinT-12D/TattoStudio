@model TattoStudioModerna.Models.OrderVM

@{
    ViewData["Title"] = "Направи поръчка";
}
<h1 style="color:wheat">Направи поръчка</h1>
<hr />
<div style="color:wheat" class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TattoId" class="control-label">Име на татуировката</label>
                <select asp-for="TattoId" class="form-control" asp-items="ViewBag.TattoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Купи" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
