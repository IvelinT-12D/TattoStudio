@model TattoStudioModerna.Data.Order

@{
    ViewData["Title"] = "Details";
}

<h1 style="color:wheat">Информация за татуировка</h1>

<div style="color:wheat">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <a>Име на клиент</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class = "col-sm-2">
            <a>Име на татуировка</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tatto.Name)
        </dd>
        <dt class = "col-sm-2">
            <a>Запазена на</a>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderOn)
        </dd>
    </dl>
</div>
<div> @if (User.IsInRole("Admin")) { 
    <a class="btn badge-secondary" asp-action="Edit" asp-route-id="@Model.Id">Редактиране</a> }
    <a class="btn btn-dark" asp-action="Index">Назад</a>
</div>
