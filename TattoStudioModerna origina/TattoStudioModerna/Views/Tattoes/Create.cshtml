@using TattoStudioModerna.Data
@model TattoStudioModerna.Data.Tatto
<h1 style="color:wheat">Добавяне на татуировка</h1>

                <hr />
                <div style="color:wheat" class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Име на татуировката</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Discription" class="control-label">Описание</label>
                                <input asp-for="Discription" class="form-control" />
                                <span asp-validation-for="Discription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label">Цена</label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TattoImages" class="control-label">Изображение</label>
                                <input asp-for="TattoImages" class="form-control-file" multiple />
                                <span asp-validation-for="TattoImages" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Добави" class="btn btn-primary"/>
                                <a class="btn btn-dark" asp-action="Index">Назад</a>
                            </div>
                        </form>
                    </div>
                </div>            
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
