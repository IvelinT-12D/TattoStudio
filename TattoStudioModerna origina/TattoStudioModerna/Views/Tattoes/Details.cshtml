@model TattoStudioModerna.Data.Tatto

@{
    ViewData["Title"] = "Описание";
}

<h1 style="color:wheat">Информация на татуировка</h1>

<div style="color:wheat">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <a>Име на татуировка</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <a>Снимка</a>
        </dt>
        <dd class="col-sm-10">
            <img src='@Html.DisplayFor(model => model.Image)' width="100" />
        </dd>
        <dt class="col-sm-2">
            <a>Описание</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discription)
        </dd>
        <dt class="col-sm-2">
            <a>Цена</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) 
        </dd>
    </dl>
</div>

<div>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn badge-secondary" asp-action="Edit" asp-route-id="@Model.Id">Редактиране</a>}
    <a class="btn btn-success" asp-controller="Orders" asp-action="Create">Купи</a>
    <a class="btn btn-dark" asp-action="Index">Назад</a>

</div>
