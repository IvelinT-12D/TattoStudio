@model IEnumerable<TattoStudioModerna.Data.Tatto>



@{
    ViewData["Title"] = "Галерия";
}

<h1>Галерия</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Добавяне на татуировка</a>
    </p>}
<table class="table">
    <thead>
        <tr>
            <th>
                @*//@Html.DisplayNameFor(model => model.Name)*@
                <a>Име на татуировка</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Image)*@
                <a>Снимка</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Discription)*@
                <a>Описание</a>
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Price)*@
                <a>Цена</a>
            </th>
            <!--<th>-->
            @*@Html.DisplayNameFor(model => model.Date)*@
            <!--<a>Дата на добавяне</a>
            </th>-->
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>

                    <img src='@Html.DisplayFor(modelItem => item.Image)' width="100" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Discription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) <a>лв.</a>
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>*@
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                     <a asp-action="Edit" asp-route-id="@item.Id">Редактиране</a>
                     <a asp-action="Delete" asp-route-id="@item.Id">Изтрий</a>
                     }
                     <a asp-action="Details" asp-route-id="@item.Id">Описание</a>
                     <a asp-controller="Orders" asp-action="Create" asp-route-id="@item.Id">Купи</a>
                </td>
            </tr>
        }
    </tbody>
</table>
